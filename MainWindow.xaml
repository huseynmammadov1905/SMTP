<Window x:Class="SMTP_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMTP_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label FontFamily="ELephant" FontSize="14" HorizontalAlignment="Center" >Send To</Label>
            <TextBox Name="Send_tb" Width="600"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label FontFamily="Elephant" FontSize="14" HorizontalAlignment="Center" >Subject</Label>
            <TextBox Name="Subject_tb"  Width="600"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label FontFamily="Elephant" FontSize="14" HorizontalAlignment="Center" >Body</Label>
            <TextBox Name="Body_tb"  Width="600"/>
        </StackPanel>
        <Button Click="Button_Click" Grid.Row="3" Width="100" Height="50" FontFamily="Elephant" FontSize="14">Send</Button>
    </Grid>
</Window>
